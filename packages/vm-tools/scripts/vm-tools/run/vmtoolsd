#!/bin/sh

find_ntp_server()
{
  echo 'pool.ntp.org'
}

detect_vmware()
{
  # FIXME: Need to improve hypervisor detection method
  dmesg | grep -i '^DMI: VMware' &>/dev/null
  return "$?"
}

start()
{
  local self="`realpath "$0"`"
  local base="`dirname "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  if ! detect_vmware; then
    exec nohup ntpd -ndp "`find_ntp_server`" \
      >> "$PACKAGE_STORAGE/logs/ntpd.log" 2>&1
  fi

  modprobe -a vmci vsock vmxnet vmxnet3 vmhgfs vmblock vmsync &&
  \
  exec vmtoolsd \
    >> "$PACKAGE_STORAGE/logs/vmtoolsd.log" 2>&1
}

main()
{
  start
  return "$?"
}

main
exit "$?"

