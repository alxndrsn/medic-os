
<form id="form" method="post" action="/setup/password">

<div class="logo-wrapper">
  <div class="logo">
  </div>
</div>

<div class="login-background">
</div>

<div class="login">
  <div class="login-top">
    <div class="rows">
        <div class="row">
          <label for="password">New Administrative Password</label>
          <input class="full" type="password"
            id="password" name="password" />
        </div>
        <div class="row">
          <label for="confirmation">Confirm Administrative Password</label>
          <input class="full" type="password"
            id="confirmation" name="confirmation" />
        </div>
    </div>
    <div class="indent">
      <div class="label-hint">Optional</div>
      <label for="key">OpenSSH-Formatted Public Key(s)</label>
    </div>
  </div>
  <div class="login-bottom">
    <div class="textarea-wrapper">
      <textarea id="key" name="key"
        class="full" spellcheck="false">{{data.key}}</textarea>
    </div>
  </div>
</div>

<div class="login-status">
  {{#if messages.error}}
    <span class="error">
      {{messages.error}}.
    </span>
  {{else}}
    {{#if messages.success}}
      <span class="success">
        {{messages.success}}.
      </span>
    {{else}}
      Please select an administrative password
      for your new virtual server.
    {{/if}}
  {{/if}}
</div>
<div class="buttons">
  <input id="submit" type="submit" class="hidden" value="Save" />
  <div id="save" type="submit" class="button">
    <div class="circle">
      <div class="icon icon-check"></div>
    </div>
    <div class="label">Save</div>
  </div>
  <input id="submit" type="submit" class="hidden" value="Lock" />
  <div id="lock" type="submit" class="button {{#unless options.lock}}disabled{{/unless}}">
    <div class="circle">
      <div class="icon icon-lock-closed"></div>
    </div>
    <div class="label">Lock</div>
  </div>
</div>

</form>

